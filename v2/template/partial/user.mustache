<div class="js-widget {{widgetId}}" data-template-selector="#tpl-user">
    <ul class="userBox">
        {{#isCartNotEmpty}}
            <li class="userBox_item">
                <a class="userBox_link userBox_link__cart userBox_link__cartVal" href="{{cart.url}}">
                    <span class="qnt">{{cart.quantity}}</span>
                    <span class="userBox_text"><strong>{{cart.shownSum}}</strong> <span class="rubl">p</span></span>
                </a>
            </li><!-- полная корзина -->
        {{/isCartNotEmpty}}
        {{^isCartNotEmpty}}
            <li class="userBox_item">
                <a class="userBox_link userBox_link__cart" href="{{cart.url}}">
                    <span class="userBox_text">Корзина</span>
                </a>
            </li><!-- пустая корзина -->
        {{/isCartNotEmpty}}

        {{#isUserAuthorized}}
            <li class="userBox_item">
                <a class="userBox_link userBox_link__auth userBox_link__authVal" href="{{userLink.url}}">
                    <span class="userBox_text">{{userLink.name}}</span>
                    <div class="transBg"></div>
                </a>
            </li><!-- пользователь залогинен -->
        {{/isUserAuthorized}}
        {{^isUserAuthorized}}
            <li class="userBox_item">
                <a class="userBox_link userBox_link__auth" href="{{userLink.url}}">
                    <span class="userBox_text">Личный кабинет</span>
                </a>
            </li><!-- пользователь не залогинен -->
        {{/isUserAuthorized}}

        <li class="userBox_item userBox_item__last"><span class="userBox_link jsSearch" href=""><span class="userBox_text">Поиск</span></span></li>
    </ul>
</div>