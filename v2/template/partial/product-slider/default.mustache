<div class="sliderCat clearfix">

    {{#hasCategories}}
    <div class="sliderCatWrap">
        <ul class="sliderCatList">
        {{#categories}}
            <li class="sliderCatList__item" data-id="{{id}}">{{name}}<li>
        {{/categories}}
        </ul>
    </div>
    {{/hasCategories}}

    <div class="sliderBox">
        <div class="sliderBox__btnLeft"></div>

        <div class="sliderBox__inner">
            <ul class="sliderBoxItems">
                {{#productCards}}
                    <li class="sliderBoxItems__item" data-category="{{categoryId}}">
                        <a class="productDesc" href="{{url}}">
                            <img class="productDesc__img" src="{{image}}" />
                            <span class="productDesc__name">{{name}} </span>
                        </a>
                        <div class="productPrice">{{shownPrice}} Ñ€</div>

                        {{#cartButton}}
                            {{>partial/cart/product-button}}
                        {{/cartButton}}
                    </li>
                {{/productCards}}
            </ul>
        </div>

        <div class="sliderBox__trans"></div>

        <div class="sliderBox__btnRight"></div>
    </div>
</div>
