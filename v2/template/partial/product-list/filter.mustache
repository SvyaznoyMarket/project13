<div class="catalogHead clearfix">
    <div class="catalogHead_title js-action-params">Бренды и параметры</div>

    <a class="catalogHead_btn btnStyleGrey js-action-params" href=""><span class="arrow">Еще параметры</span></a>
</div><!--/ кнопки - показать фильтры -->

<!-- параметры фильтрации -->
<div class="params">
    {{#filters}}
        <div class="params_title">{{name}}</div>
        <div class="params_cont">
            {{#isSliderType}}
                {{>partial/product-list/filter/slider}}
            {{/isSliderType}}
            {{#isListType}}
                {{>partial/product-list/filter/list}}
            {{/isListType}}
        </div>
    {{/filters}}

    <div class="params_foot clearfix">
        <a class="params_footBtn btnStyleOrange" href="">Показать товар (29)</a>
        <a class="params_footBtn btnStyleGrey" href="">Очистить</a>
    </div>
</div>
<!--/ параметры фильтрации -->

<!-- фильтры  -->
<div class="filter clearfix">
    <div class="filterBox">
        <ul class="filterTags clearfix">
