        <input type="text" class="priceRange_amount" />

        <span class="priceRange_rubl rubl">p</span>
    </div><!--/ фильтр цен -->

    {{#sortingBlock}}
        {{>partial/product-list/sorting}}
    {{/sortingBlock}}
</div>
