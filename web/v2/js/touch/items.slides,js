$(function(){
  var body = $('body'),
      itemCount = 0,
      bodyWidth = body.width(),
      slidesWrap = $('.sliderBox'),
      slidesList = $('.sliderBoxItems'),
      slidesListItem = slidesList.find('.sliderBoxItems_item'),

      curSlide = 0,

      btnNext = slidesWrap.find('.sliderBox_btn__right'),
      btnPrev = slidesWrap.find('.sliderBox_btn__left');
  // end of vars

  slidesListItem.each(
    function() {
      itemCount++;
  });

  var setSlides = function setSlides() {

  var itemW = slidesListItem.outerWidth(),
      sliderW = slidesWrap.width(),
      listW = itemW * itemCount,
      fitCount = Math.floor( sliderW / itemW ),

      slideLeft = 0;

  var 
  /*
  Ресайз сладйдера
   */
  resizeItemSlides = function resizeItemSlides() {
    var 
        slidesShadow = $('.sliderBox_trans'),
        bodyWidth = body.width();

    // if ( (bodyWidth < 700) && (bodyWidth > 400) ) {
    //   slidesListItem.css({'padding' : '0 11px', 'width' : parseInt(sliderW/3 - 22) });
    //   slidesShadow.hide();
    // }
    // else if ( bodyWidth < 400 ) {
    //   slidesListItem.css({'padding' : '0 41px', 'width' : parseInt(sliderW - 82) });
    //   slidesShadow.hide();
    // }
    // else {
    //   slidesListItem.css({'padding' : '0 21px', 'width' : 190});
    //   slidesShadow.show();
    // }

    slidesList.css({'width' : listW, 'left' : 0});

    console.log(sliderW);
    console.log(fitCount);
  },


  nextRespSlide = function nextRespSlide() {
    slideLeft = slideLeft + fitCount * itemW;

    slidesList.stop(true, false).animate({'left' : -slideLeft});

    console.log(slideLeft);
    console.log(itemW);
    console.log(fitCount)

    return false;

  },


  prevRespSlide = function prevRespSlide() {

    slideLeft = slideLeft - fitCount * itemW;

    slidesList.stop(true, false).animate({'left' : -slideLeft});

    return false;

  };

  btnNext.on('click', nextRespSlide);
  btnPrev.on('click', prevRespSlide);
  $(window).on('load resize', resizeItemSlides);
}

  $(window).on('load resize', setSlides);
  
});