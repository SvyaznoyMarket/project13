AddDefaultCharset utf-8

Options +FollowSymLinks +ExecCGI

<IfModule mod_rewrite.c>
  RewriteEngine On

  # uncomment the following line, if you are having trouble
  # getting no_script_name to work
  #RewriteBase /

  RewriteRule ^region/init$ index.light.php [L]
  RewriteRule ^user/shortinfo$ user_shortinfo.php [L]
  RewriteRule ^product/delivery1click index.light.php [L]
  RewriteRule ^product/delivery-info.* index.light.php [L]
  RewriteRule ^category/main_menu index.light.php [L]

  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteRule ^wp-admin/$ /content/wp-admin/index.php [L]
  RewriteRule ^wp-admin/(.*)$ /content/wp-admin/$1 [L]
  RewriteRule ^wp-(.*)$ /content/wp-$1 [L]

  RewriteRule ^euro2012 football.html [L]
  RewriteRule ^nespresso nespresso.html [L]
  RewriteRule ^waterheater water_heater.html [L]

  # we skip all files with .something
  #RewriteCond %{REQUEST_URI} \..+$
  #RewriteCond %{REQUEST_URI} !\.html$
  #RewriteRule .* - [L]

  # we check if the .html version is here (caching)
  RewriteRule ^$ index.html [QSA]
  RewriteRule ^([^.]+)$ $1.html [QSA]
  RewriteCond %{REQUEST_FILENAME} !-f

  # no, so we redirect to our front web controller
  RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>
