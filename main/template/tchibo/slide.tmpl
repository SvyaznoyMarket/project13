<div class="bPromoCatalogSliderWrap_eSlide">
    <a class="bPromoCatalogSliderWrap_eSlideLink" href="<%=linkUrl%>">
        <img src="<%=imgUrl%>" alt="<%=title%>"/>
    </a>

    <div class="bPromoCatalogProducts clearfix">
    <% for( var i = 0; i < products.length; i++ ) { %>
        <div class="prodItem">
            <a href="<%= products[ i ].link %>" title="<%= products[ i ].name %>">

                <% if ( !products[ i ].isBuyable ) { %>
                <div class="bProductDescSticker stockSticker">
                    <img class="stockSticker_img" src="/images/shild_sold_out.png" alt="Нет в наличии" />
                </div>
                <% } %>

                <div class="prodImg">
                    <img src="<%= products[ i ].image %>" alt="<%= products[ i ].name %>" />
                </div>
            </a>
                
            <div class="prodDesc tchiboProducts">
                <div class="prodDesc__inner clearfix">
                    <div class="prodName"><a href="<%= products[ i ].link %>" title="<%= products[ i ].name %>"><%= products[ i ].name %></a></div>
                    <div class="prodPrice"><%= products[ i ].price %> <span class="rubl">p</span></div>

                    <div class="btnBuy">
                        <a class="jsBuyButton btnBuy__eLink" href="">Купить</a>
                    </div>
                </div>
            </div> 
        </div>
    <% } %>
    </div>
</div>