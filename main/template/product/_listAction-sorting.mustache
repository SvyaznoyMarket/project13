<!-- Сортировка товаров по параметрам -->
<ul class="bSortingList mSorting js-category-sorting">
    <li class="bSortingList__eItem mTitle">Сортировать</li>

    {{#links}}
        <li class="bSortingList__eItem mSortItem {{#active}}mActive js-category-sorting-activeItem{{/active}} {{#default}}js-category-sorting-defaultItem{{/default}} js-category-sorting-item">
            <a class="bSortingList__eLink js-category-sorting-link" data-sort="{{datasort}}" href="{{url}}">{{&title}}</a>
        </li>
    {{/links}}
</ul>
<!-- /Сортировка товаров по параметрам -->