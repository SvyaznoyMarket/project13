<!-- Листинг товаров -->
{{#products}}
<!-- Элемент листинга/продукт -->
<li class="bListingItem">
    <div class="bListingItem__eInner">
        <!-- /Блок с именем продукта и иконками доп. просмотра товара -->
        {{#line}}<a href="{{link}}">{{/line}}<img class="bProductImg__eImg" src="{{image}}" alt="" /></a>
        <h3>
            {{#line}}
                <a href="{{link}}">
                    <strong>Серия {{name}}</strong>
                    <span class="font10 gray"> ({{productCount}})</span>
                </a>
            {{/line}}
        </h3>

        {{#hasVariations}}
        <div class="bOptionsSection">
            <i class="bCorner"></i>
            <i class="bCornerDark"></i>

            <ul class="bOptionsList">
            {{#variations}}
                <li class="bOptionsList__eItem">{{name}}</li>
            {{/variations}}
            </ul>
        </div>
        {{/hasVariations}}

    </div>
</li>
<!-- /Элемент листинга/продукт -->
{{/products}}
{{^products}}
    <li>Товары не найдены</li>
{{/products}}
<!-- /Листинг товаров -->