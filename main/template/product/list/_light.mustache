<!-- Листинг товаров -->
{{#products}}
    <!-- Элемент листинга/продукт -->
    {{#isBanner}}
        <li class="lstn_i lstn_i-banner {{#view.hoverDescription}}lstn_i-hover{{/view.hoverDescription}}" style="background-image: url('{{image}}'); background-repeat: no-repeat;">
            <div class="lstn_i_inn"><div class="adfoxWrapper" id="adfox215"></div></div>
        </li>
    {{/isBanner}}

    {{^isBanner}}
        <li class="lstn_i {{#view.hoverDescription}}lstn_i-hover{{/view.hoverDescription}}">
            <div class="lstn_i_inn">
                <ul class="stickLst clearfix">
                    {{#label}}
                        <li class="stickLst_i stickLst_i-l"><img class="stickLst_img" src="{{image}}" alt="{{name}}" /></li>
                    {{/label}}
                    {{#brandImage}}
                        <li class="stickLst_i stickLst_i-r"><img class="stickLst_img" src="{{brandImage}}" alt="{{name}}" /></li>
                    {{/brandImage}}

                    {{#hasVideo}}
                        <li class="stickLst_i"><img class="stickLst_img" src="/css/bCatalog/img/video.png" /></li>
                    {{/hasVideo}}

                    {{#has360}}
                        <li class="stickLst_i"><img class="stickLst_img" src="/css/bCatalog/img/grad360.png" /></li>
                    {{/has360}}
                </ul>

                <a href="{{link}}" class="lstn_imglk"><img class="lstn_img" src="{{image}}" alt="" /></a>

                <div class="lstn_pr">
                    {{#oldPrice}}
                        <span class="lstn_pr_old">
                            {{oldPrice}} <span class="rubl">p</span>
                            {{#priceSale}}
                                &nbsp;<span class="lstn_pr_sale">-{{priceSale}}%</span>
                            {{/priceSale}}
                        </span>
                    {{/oldPrice}}
                    <span class="lstn_pr_now{{#priceSale}} lstn_pr_now-sale{{/priceSale}}"><strong>{{price}}</strong> <span class="rubl">p</span></span>
                </div>

                {{#view.extraContent}}
                    <div class="lstn_btn clearfix">
                        {{^hasKit}}
                            <a href="" class="btnCmprb jsCompareListLink" data-id="{{id}}" data-bind="compareListBinding: compare"></a>

                            {{#isBuyable}}
                                {{#cartButton}}{{> cart/_button-product }}{{/cartButton}}
                            {{/isBuyable}}

                            {{#view.extraContent}}
                                {{#isInShopShowroomOnly}}
                                    <span class="lstn_btn_notb">
                                        На витрине
                                    </span>
                                {{/isInShopShowroomOnly}}

                                {{^isInShopShowroomOnly}}
                                    {{#isInShopStockOnly}}
                                        <span class="lstn_btn_notb">
                                            Только в магазине
                                        </span>
                                    {{/isInShopStockOnly}}
                                {{/isInShopShowroomOnly}}

                                {{^isInShopShowroomOnly}}
                                    {{^isInShopStockOnly}}
                                        {{^isBuyable}}
                                            <span class="lstn_btn_notb">
                                                Нет в наличии
                                            </span>
                                        {{/isBuyable}}
                                    {{/isInShopStockOnly}}
                                {{/isInShopShowroomOnly}}
                            {{/view.extraContent}}
                        {{/hasKit}}

                        {{#isKitLocked}}
                            <a href="" class="btnCmprb jsCompareListLink" data-id="{{id}}" data-bind="compareListBinding: compare"></a>
                            {{#isBuyable}}
                                {{#cartButton}}{{> cart/_button-product }}{{/cartButton}}
                            {{/isBuyable}}

                            {{#view.extraContent}}
                                {{#isInShopShowroomOnly}}
                                    <span class="lstn_btn_notb">
                                        На витрине
                                    </span>
                                {{/isInShopShowroomOnly}}

                                {{^isInShopShowroomOnly}}
                                    {{#isInShopStockOnly}}
                                        <span class="lstn_btn_notb">
                                            Только в магазине
                                        </span>
                                    {{/isInShopStockOnly}}
                                {{/isInShopShowroomOnly}}

                                {{^isInShopShowroomOnly}}
                                    {{^isInShopStockOnly}}
                                        {{^isBuyable}}
                                            <span class="lstn_btn_notb">
                                                Нет в наличии
                                            </span>
                                        {{/isBuyable}}
                                    {{/isInShopStockOnly}}
                                {{/isInShopShowroomOnly}}
                            {{/view.extraContent}}
                        {{/isKitLocked}}
                    </div>
                {{/view.extraContent}}

                {{#view.bottomDescription}}
                    <div class="lstn_desc"><a href="{{link}}">{{name}}</a></div>
                    {{#review}}{{> product/_review-compact }}{{/review}}
                {{/view.bottomDescription}}
            </div>
        </li>
    {{/isBanner}}
    <!-- /Элемент листинга/продукт -->
{{/products}}

{{^products}}
    <li class="lstn_empty">Товары не найдены</li>
{{/products}}
<!-- /Листинг товаров -->
