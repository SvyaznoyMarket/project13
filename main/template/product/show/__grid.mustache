<div class="productInner__hover">
    <div class="productInner__imgBox">
        <a class="productInner__imgLink" href="{{link}}">
            <img class="productInner__img" src="{{image}}" alt="{{name}}" />
        </a>
    </div><!--/ картинка продукта -->

    <div class="productInner__desc">
        <div class="inner">
            <a class="name" href="{{link}}">{{name}}</a>

            <div class="clearfix">
                <span class="price" class="">{{price}} <span class="rubl">p</span></span>

                {{#hasVariations}}
                <span class="bOptions"><span class="bDecor">Варианты</span></span>
                {{/hasVariations}}
            </div>

            {{#hasVariations}}
            <div class="bOptionsSection">
                <i class="bCorner"></i>
                <i class="bCornerDark"></i>

                <ul class="bOptionsList">
                    {{#variations}}
                    <li class="bOptionsList__eItem">{{name}}</li>
                    {{/variations}}
                </ul>
            </div>
            {{/hasVariations}}

            <div class="bBtnLine clearfix">
                {{#cartButton}}{{> cart/_button-product }}{{/cartButton}}
                <a href="" class="btnCmprb jsCompareList" data-id="{{id}}" data-bind="compareListBinding: compare"></a>
                <a class="btnView mBtnGrey" href="{{link}}">Посмотреть</a>
            </div>
        </div>
    </div><!--/ описание продукта -->
</div>