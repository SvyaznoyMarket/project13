<div class="productInner__hover js-listing-item" {{#isSlot}}data-is-slot="true"{{/isSlot}} {{#isOnlyFromPartner}}data-is-only-from-partner="true"{{/isOnlyFromPartner}}>
    <div class="productInner__imgBox">
        <a class="productInner__imgLink js-listing-item-img" href="{{link}}" {{#isNewWindow}}target="_blank"{{/isNewWindow}}>
            <img class="productInner__img" src="{{image}}" alt="{{name}}" />
        </a>
    </div><!--/ картинка продукта -->

    <div class="productInner__desc">
        <div class="inner">
            <a class="name" href="{{link}}" {{#isNewWindow}}target="_blank"{{/isNewWindow}}>{{name}}</a>

            <div class="clearfix">
                <span class="price" class="">{{&price}} <span class="rubl">p</span></span>

                <div class="bBtnLine">
                    <a href="" class="btnCmprb jsCompareListLink" data-id="{{id}}" data-bind="compareListBinding: compare" {{#isSlot}}data-is-slot="true"{{/isSlot}} {{#isOnlyFromPartner}}data-is-only-from-partner="true"{{/isOnlyFromPartner}}></a>
                    {{#cartButton}}{{> cart/_button-product }}{{/cartButton}}
                </div>
            </div>

            {{#hasVariations}}
                <span class="bOptions"><span class="bDecor">Варианты</span></span>
            {{/hasVariations}}

            {{#hasVariations}}
            <div class="bOptionsSection">
                <i class="bCorner"></i>
                <i class="bCornerDark"></i>

                <ul class="bOptionsList">
                    {{#variations}}
                    <li class="bOptionsList__eItem">{{name}}</li>
                    {{/variations}}
                </ul>
            </div>
            {{/hasVariations}}
        </div>
    </div><!--/ описание продукта -->
</div>