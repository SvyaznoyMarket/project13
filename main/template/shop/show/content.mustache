<a class="shops__back" href="{{backUrl}}">Все магазины и точки самовывоза в {{point.town.names.locativus}}</a>

<div class="shops__info">
    <div class="shops__btns">
        <a class="shops__btn-default" href="#">Распечатать</a>
        <a class="shops__btn-default" href="#">Отправить на email</a>
    </div>

    <div class="pick-point-item">

        <div class="pick-point-item__addr">
            {{#point.subway.name}}

                <div class="pick-point-item__metro" style=" background-color: orange">
                    <div class="pick-point-item__metro-inn">м. {{point.subway.name}}</div>
                </div>
            {{/point.subway.name}}
            {{#point.address}}
                <div class="pick-point-item__addr-name">{{point.address}}</div>
            {{/point.address}}

            <div class="pick-point-item__time">
                {{#point.workingTime}}
                   Работает {{point.workingTime}}<br>
                {{/point.workingTime}}
                {{#point.phone}}
                    Телефон: {{point.phone}}
                {{/point.phone}}
            </div>
        </div>

    </div>

</div>



{{#point.showMap}}
    <div class="bMap__eBody js-shop-viewport" data-map-latitude="{{point.latitude}}" data-map-longitude="{{point.longitude}}"></div>
    <div class="shops-gallery">
        {{#point.images.0}}
            <ul class="shops-gallery__lst">
            {{#point.images}}
                <li>
                    <a class="shops-gallery__i js-shop-image-opener" data-big-url="{{big.url}}" data-type="image">
                        <img src="{{small.url}}" alt="" />
                    </a>
                </li>
            {{/point.images}}
            </ul>

            <a class="shops-gallery__i shops-gallery__bottom js-shop-image-opener" data-type="map">
                <img src="/images/map_ico.png" alt="" />
            </a>
        {{/point.images.0}}
    </div>
{{/point.showMap}}
<div class="shops__descr">
    {{#point.description}}
        <p>{{point.description}}</p>
    {{/point.description}}

    {{#point.way}}



        <div class="shops-way__head">Как добраться</div>
        {{#point.way.common}}
            <p>{{point.way.common}}</p>
        {{/point.way.common}}

        {{^point.way.common}}

        <div class="shops-way-tabs tabs">
            <div class="tabs-head">
                {{#point.way.walk}}<div class="tabs-head__i active js-tab-head" data-target="transport"><a>На городском транспорте</a></div>{{/point.way.walk}}
                {{#point.way.auto}}<div class="tabs-head__i js-tab-head" data-target="auto"><a>На авто</a></div>{{/point.way.auto}}
            </div>

            <div class="tabs-body">
                {{#point.way.walk}}
                    <div class="tabs-body__i active js-tab" id="transport">
                        {{point.way.walk}}
                    </div>
                {{/point.way.walk}}

            {{#point.way.auto}}
                <div class="tabs-body__i js-tab" id="auto">{{point.way.auto}}</div>
            {{/point.way.auto}}
            </div>

        </div>
        {{/point.way.common}}

    {{/point.way}}
</div>