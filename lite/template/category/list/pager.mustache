<div class="goods__item grid-4col__item">

    {{#label}}
    <div class="sticker-list">
        <div class="sticker sticker_sale">{{name}}</div>
    </div>
    {{/label}}

    <div class="goods__controls">
        <a class="add-control add-control_wish" href="" data-status="В избранное"></a>
        <a class="add-control add-control_compare" href="" data-status="В сравнение"></a>
    </div>

    {{#brandImage}}
    <div class="sticker-brand">
        <a href=""><img src="{{brandImage}}" alt=""></a>
    </div>
    {{/brandImage}}

    <a href="{{link}}" class="goods__img">
        <img src="{{image}}" alt="" class="goods__img-image" style="opacity: 1;">
        <!--<div class="sticker sticker_info">Товар со склада</div>-->
    </a>

    {{#review}}
    <div class="goods__rating rating">
        <span class="rating-state">
        {{#stars}}
        <i class="rating-state__item rating-state__item_1 icon-rating {{#show}}rating-state__item_fill{{/show}}"></i>
        {{/stars}}
        </span>
        <span class="rating-count">({{count}})</span>
    </div>
    {{/review}}

    <div class="goods__name">
        <div class="goods__name-inn">
            <a href="{{link}}">{{name}}</a>
        </div>
    </div>

    <div class="goods__price-old"><span class="line-through">{{#odlPrice}}{{oldPrice}}</span> <span class="rubl-css">P</span>{{/odlPrice}}</div>
    <div class="goods__price-now">{{price}} <span class="rubl-css">P</span></div>

    {{& buyButtonHtml}}

</div>